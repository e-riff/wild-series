{% extends 'base.html.twig' %}

{% block title %}Actor index{% endblock %}

{% block content %}
    {%  include '/include/_sidebar.html.twig' %}
    <main class="container-fluid">
        <h1>Actor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>BirthDate</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.firstname }}</td>
                <td>{{ actor.lastname }}</td>
                <td>{{ actor.birthDate ? actor.birthDate|date('Y-m-d') : '' }}</td>
                <td>{{ actor.image }}</td>
                <td>
                    <a href="{{ path('app_actor_show', {'id': actor.id}) }}">show</a>
                    <a href="{{ path('app_actor_edit', {'id': actor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_actor_new') }}">Create new</a>
    </main>
{% endblock %}
